{
    "version": "6.6.14",
    "description": "A source code tagging system that works the same way across diverse environments.",
    "homepage": "https://www.gnu.org/software/global/",
    "license": "GPL-3.0-or-later",
    "url": "https://github.com/lsq/global/releases/download/6.6.14/global-6.6.14_x64.zip",
    "hash": "e628586056588d82b8c51da5f3357a68f827b4c945b70b7a6ebe5d43342108b3",
    "bin": [
        "bin\\global.exe",
        "bin\\gtags.exe",
        "bin\\gtags-cscope.exe",
        "bin\\htags.exe",
        "bin\\gozilla.exe"
    ],
    "persist": "share",
    "post_install": [
        "if (Get-Command ctags -ErrorAction SilentlyContinue) {",
        "$ctagscom = (Get-Command ctags).Source -replace '\\\\','/' -replace ':', '\\:'",
        "$gcf = \"$persist_dir\\share\\gtags\\gtags.conf\"",
        "(Get-Content $gcf) -replace '(:ctagscom=)(.*?)(:\\\\)', ('$1{0}$3' -f $ctagscom) | Set-Content $gcf -Encoding UTF8 ",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/lsq/global"
    },
    "autoupdate": {
        "url": "https://github.com/lsq/global/releases/download/$version/global-$version_x64.zip"
    }
}
